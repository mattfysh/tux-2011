<?xml version="1.0"?>
<project name="tux" default="build" basedir="../">

	<target name="build">
		<antcall target="lint-src" />
		<antcall target="lint-tests" />
		<antcall target="test" />
	</target>

	<!-- lint source -->
	<target name="lint-src">
		<antcall target="lint">
			<param name="dir" value="src" />
			<param name="opt" value="undef=true,maxerr=25,predef=namespace;noop;tux;Backbone;Store" />
		</antcall>
	</target>

	<!-- lint tests -->
	<target name="lint-tests">
		<antcall target="lint">
			<param name="dir" value="test" />
			<param name="opt" value="undef=true,maxerr=25,predef=namespace;noop;tux;Backbone;Store;describe;it;beforeEach;expect;sinon" />
		</antcall>
	</target>

	<!-- lint -->
	<target name="lint">
		<apply dir="build" executable="java" failonerror="true">
			<fileset dir="${dir}" includes="**/*.js" />
			<arg line="-jar rhino.jar jshint-rhino.js" />
			<srcfile />
			<arg value="${opt}" />
		</apply>
		<echo>${dir} JSHint Passed</echo>
	</target>

	<!-- run unit tests -->
	<target name="test">
		<exec executable="java" failonerror="true">
			<arg line="-jar build/JsTestDriver-1.3.2.jar --reset --tests all" />
		</exec>
		<echo>Jasmine Specs Passed</echo>
	</target>

</project>